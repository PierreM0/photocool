<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:photocool.ViewModels"
        xmlns:v="using:photocool.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:photocool.Models"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="photocool.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Width="800"
        Height="600"
        Title="photocool">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto,Auto,*" ColumnDefinitions="Auto,*">
        <v:MenuBar Grid.Row="0" Grid.ColumnSpan="2"/>
        
        <CheckBox Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" Name="AllFiltersCheck" IsChecked="False"
                  Click="RefreshImageGrid" Content="L'image doit respecter tous les filtres"/>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Grid.Row="2" Grid.ColumnSpan="2" Margin="10">
            <v:SearchBar Name="Bar"/>
        </StackPanel>
        
        <Border Grid.Row="3" Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="10" CornerRadius="4">
            <TreeView Name="TagTreeView" ItemsSource="{Binding TagNodes}" Width="200" Margin="4">
                <TreeView.DataTemplates>
                    <TreeDataTemplate DataType="{x:Type local:TagNode}" ItemsSource="{Binding Children}">
                        <Border BorderBrush="Gray" Background="Transparent" PointerPressed="TagNode_OnPointerPress">
                            <Border.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Ajouter un tag" Click="AddTagToParent"></MenuItem>
                                    <MenuItem Header="Modifier le tag" Click="ModifyTag"></MenuItem>
                                    <MenuItem Header="DÃ©parenter" Click="DeparentTag"></MenuItem>
                                    <MenuItem Header="Supprimer" Click="DeleteTag"></MenuItem>
                                </ContextMenu>
                            </Border.ContextMenu>
                            <TextBlock Text="{Binding Tag}" Padding="4"></TextBlock>
                        </Border>
                    </TreeDataTemplate>
                </TreeView.DataTemplates>
                
                <TreeView.ItemContainerTheme>
                    <ControlTheme TargetType="TreeViewItem" BasedOn="{StaticResource {x:Type TreeViewItem}}">
                        <Setter Property="IsExpanded" Value="True" />
                    </ControlTheme>
                </TreeView.ItemContainerTheme>
            </TreeView>
        </Border>
        
        <ScrollViewer Grid.Row="3" Grid.Column="1" Margin="10" AllowAutoHide="False">
            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" Name="ImagePanel"/>
        </ScrollViewer>
    </Grid>
</Window>
