<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:photocool.ViewModels"
        xmlns:v="using:photocool.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="photocool.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Width="800"
        Height="600"
        Title="photocool"
        Background="#D6BCA5">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto,*">
        <v:MenuBar Grid.Row="0"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <v:SearchBar Name="Bar" Margin="30,30,30,0"/>
            <CheckBox Name="AnyFilterCheck" IsChecked="False" Click="RefreshImageGrid" Content="L'image doit respecter un des filtres"></CheckBox>
        </StackPanel>
        <ScrollViewer Grid.Row="2" AllowAutoHide="False">
            <Grid Margin="30, 0" Name="ImageGrid"></Grid>
        </ScrollViewer>
    </Grid>

</Window>
