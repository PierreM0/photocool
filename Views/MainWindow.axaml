<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:photocool.ViewModels"
        xmlns:v="using:photocool.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="photocool.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Width="800"
        Height="600"
        Title="photocool"
        Background="#f5f5f7">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <DockPanel Width="800" Height="600">
        <v:NavBar DockPanel.Dock="Top"/>
        <DockPanel Name="Panel">
            <v:SearchBar DockPanel.Dock="Top" Margin="10"/>
            <Grid Name="ImageGrid"></Grid>
           
            <ScrollViewer>
                <Grid Name="Grille"></Grid>
            </ScrollViewer>
        </DockPanel>
    </DockPanel>

</Window>
