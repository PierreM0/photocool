<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:photocool.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="photocool.Views.ImageCard">
    <StackPanel Margin="10">
        <Button Width="150" Height="125">
            <StackPanel VerticalAlignment="Center" Orientation="Vertical">
                <Image HorizontalAlignment="Center" Name="ImagePreview" Width="75" Height="75"></Image>
                <TextBlock TextWrapping="Wrap" HorizontalAlignment="Center" Name="ImageName"></TextBlock>
            </StackPanel>
        </Button>
    </StackPanel>
</UserControl>
